<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ffffff"
    android:gravity="center_horizontal">


    <TextView
        android:text="@string/name"
        android:textSize="24sp"
        style="@style/MainScreenFont"
        android:layout_marginTop="16dp" />

    <ImageView
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:id="@+id/imgAvatar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/profile_pic" />

    <TextView
        android:text="@string/contact"
        style="@style/MainScreenFont"
        android:layout_above="@+id/imgContact"
        android:layout_marginBottom="4dp" />

    <ImageView
        android:layout_width="@dimen/main_icon_small_size"
        android:layout_height="@dimen/main_icon_small_size"
        android:id="@+id/imgContact"
        android:layout_above="@+id/imgAvatar"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icon_mail"
        android:layout_marginBottom="18dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignTop="@+id/imgAvatar"
        android:layout_toLeftOf="@+id/imgAvatar"
        android:layout_toStartOf="@+id/imgAvatar"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:id="@+id/linearLayout">
        <TextView
            android:text="@string/work"
            style="@style/MainScreenFont"
            android:layout_width="fill_parent"
            android:gravity="center"
            android:layout_marginBottom="4dp" />

        <ImageView
            android:layout_width="@dimen/main_icon_small_size"
            android:layout_height="@dimen/main_icon_small_size"
            android:id="@+id/imgWork"
            android:src="@drawable/icon_work"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imgAvatar"
        android:layout_toEndOf="@+id/imgAvatar"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_alignTop="@+id/imgAvatar"
        android:gravity="center">
        <TextView
            android:text="@string/edu"
            style="@style/MainScreenFont"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="4dp" />
        <ImageView
            android:layout_width="@dimen/main_icon_small_size"
            android:layout_height="@dimen/main_icon_small_size"
            android:id="@+id/imgEdu"
            android:src="@drawable/icon_edu" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/imgAvatar"
        android:layout_marginTop="18dp"
        android:id="@+id/linearLayout2"
        android:layout_marginLeft="60dp">


    <ImageView
            android:layout_width="@dimen/main_icon_small_size"
            android:layout_height="@dimen/main_icon_small_size"
            android:id="@+id/imgAbout"
            android:layout_gravity="center"
            android:src="@drawable/icon_about"/>

        <TextView
            android:text="@string/about"
            style="@style/MainScreenFont"
            android:layout_width="fill_parent"
            android:gravity="center"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imgAvatar"
        android:layout_alignTop="@+id/linearLayout2"
        android:layout_toRightOf="@+id/imgContact"
        android:layout_toEndOf="@+id/imgContact"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="60dp">
        <ImageView
            android:layout_width="@dimen/main_icon_small_size"
            android:layout_height="@dimen/main_icon_small_size"
            android:id="@+id/imgSkills"
            android:layout_gravity="center"
            android:src="@drawable/icon_skills" />
        <TextView
            android:text="@string/skills"
            style="@style/MainScreenFont"
            android:layout_width="fill_parent"
            android:gravity="center"
            android:layout_marginTop="4dp" />
    </LinearLayout>
</RelativeLayout>
