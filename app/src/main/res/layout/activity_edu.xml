<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="at.kropf.curriculumvitae.WorkActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgEdu"
            style="@style/headerImage"
            android:src="@drawable/icon_edu"
            android:transitionName="@string/edu"
            android:contentDescription="@string/edu"/>

        <TextView
            style="@style/headerText"
            android:text="@string/edu"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginStart="@dimen/layout_side_margin"
        android:layout_marginLeft="@dimen/layout_side_margin"
        android:layout_marginEnd="@dimen/layout_side_margin"
        android:layout_marginRight="@dimen/layout_side_margin">

        <View
            android:id="@+id/lineView"
            android:layout_width="1dp"
            android:layout_height="250dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="120dp"
            android:layout_marginStart="120dp"
            android:background="#494646" />

        <RelativeLayout
            android:id="@+id/rl3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/textView16"
                style="@style/WorkText"
                android:layout_width="90dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="25dp"
                android:text="@string/year_fh"
                android:textSize="16sp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_below="@+id/textView16"
                android:layout_toEndOf="@+id/textView16"
                android:layout_toRightOf="@+id/textView16"
                android:src="@drawable/icon_fh"
                android:contentDescription="@string/fh"/>


            <TextView
                android:id="@+id/textView18"
                style="@style/WorkTextLarge"
                android:layout_alignBottom="@+id/textView16"
                android:layout_alignEnd="@+id/textView19"
                android:layout_alignRight="@+id/textView19"
                android:fontFamily="sans-serif-light"
                android:text="@string/fh"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/textView19"
                style="@style/WorkText"
                android:layout_width="130dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/imageView12"
                android:layout_marginTop="5dp"
                android:gravity="end"
                android:text="@string/fh_course_name" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl3"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/textView"
                style="@style/WorkText"
                android:layout_width="90dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:text="@string/year_borg"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView3"
                style="@style/WorkTextLarge"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView4"
                android:layout_alignRight="@+id/textView4"
                android:layout_alignTop="@+id/textView"
                android:fontFamily="sans-serif-light"
                android:gravity="end"
                android:lines="2"
                android:text="@string/borg"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/textView4"
                style="@style/WorkText"
                android:layout_width="150dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textView3"
                android:layout_marginTop="5dp"
                android:gravity="end"
                android:text="@string/matriculation" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_below="@+id/textView"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/textView"
                android:layout_toRightOf="@+id/textView"
                android:src="@drawable/icon_borg"
                android:contentDescription="@string/borg"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>