<resources>

    <!-- the theme applied to the application or activity -->
    <style name="AppTheme"
        parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="homeAsUpIndicator">@drawable/icon_menu</item>
        <item name="android:homeAsUpIndicator">@drawable/icon_menu</item>
        <!-- Support library compatibility -->
    </style>


    <!-- Main screen -->
    <style name="MainScreenFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="BottomSheet.StyleDialog" parent="BottomSheet.Dialog">
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowAnimationStyle">@style/BottomSheet.Animation</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColorHint">#42ffffff</item>
        <item name="bs_dividerColor">#b2dfdb</item>
    </style>

    <!-- Work Screen -->
    <style name="WorkText" parent="MainScreenFont">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Skills Screen -->
    <style name="PagerTabStripText">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>
